script/source = "extends KinematicBody2D

export var _HorizontalVelocity := 80.0
export var _GravityVelocity := 120
export var _JumpForce := 180
export var _JumpingDuration := 0.3
export var _DiagonalFactor := 1.3
export var _Accel := 0.1
export var _Deaccel := 0.2
export var _SprintVelocity := 130.0

var _CurrSpeed := Vector2(0, 0)
var _GravAcceleration := 0.25
var _JumpDeaccel := 0.05
var _IsJumping := false
var _GoingLeft := false

func calcSpriteSide() -> void:
	if _CurrSpeed.x > 0 && _GoingLeft:
		_GoingLeft = false
		$Sprite.scale.x *= -1
	elif _CurrSpeed.x < 0 && !_GoingLeft:
		_GoingLeft = true
		$Sprite.scale.x *= -1

func getFinalYSpeed() -> void:
	if self.is_on_floor():
		self._CurrSpeed.y = 1.0
	else:
		if self._IsJumping:
			self._CurrSpeed.y = lerp(self._CurrSpeed.y, 0, self._JumpDeaccel)
		else:
			self._CurrSpeed.y = lerp(self._CurrSpeed.y, self._GravityVelocity, self._GravAcceleration)

func _process(delta):
	if self._IsJumping:
		self.move_and_slide(self._CurrSpeed, Vector2.UP, true)
	else:
		self.move_and_slide_with_snap(self._CurrSpeed, Vector2.DOWN, Vector2.UP, true)
	
	self.getFinalYSpeed()
	
	calcSpriteSide()

func _on_JumpTimer_timeout():
	_IsJumping = false

func _on_Coin_pickedUp():
	print(\"Peguei!!\")
"

